    hr
    section
        .container-fluid
            .row.mb-5
                .col-xl-10.col-lg-9.col-md-8.ml-auto
                    .row
                        .col-12
                            h3.text-muted.text-center.mb-3 Commands
                            table.table.table-dark.table-hover.text-center#commands
                                thead
                                    tr.text-muted
                                        th #
                                        th Name
                                        
                                        th Description
                                        th Usage
                                        th.d-none.d-sm-table-cell Cooldown
                                tbody
                                    - var i = 0;

                                    - for (let [name, details] of Array.from(commands))
                                        tr
                                            th= ++i
                                            td= name
                                           
                                            td= details.description
                                            td= details.usage
                                            td.d-none.d-sm-table-cell= details.cooldown > 0 ? ms(client.commands.cooldown) : '-'
                            .pagination-container
                                nav
                                    ul.pagination.justify-content-center

block js
    script(src="js/index.js")